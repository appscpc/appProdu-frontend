            <Label x:Name="lblNombre"   
                TranslationX="70"
                Text="Nombre del Proyecto:"
                FontSize="23"
                TextColor="Black"
                TranslationY="120"/>

            <Entry Placeholder="Proyecto #1" 
                   x:Name="nombreProyectoEntry"
                   WidthRequest="270"
                   HorizontalOptions="Center"
                   FontSize="20"
                   TranslationY="120"/>

            <Label x:Name="lblDescripcion"   
                TranslationX="70"
                Text="Descripción:"
                FontSize="23"
                TextColor="Black"
                TranslationY="140"/>
            
           <!-- <Controls:PlaceholderEditor -->
            <Entry
                Placeholder="Construcción"
                x:Name="descripcionProyectoEditor"
                WidthRequest="270"
                HorizontalOptions="Center"
                HeightRequest="50"
                FontSize="20"
                TranslationY="150"/>

        </StackLayout>

