<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppProdu"
             x:Class="AppProdu.MainPage"
             Title="Iniciar Sesión">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /></Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="1" Grid.Column="0">
            <!-- Place new controls here -->
            <Entry Placeholder="Correo" x:Name="correoEntry"
               WidthRequest="250"
               HeightRequest="75"
               HorizontalOptions="Center"
               Text=""
               FontSize="18"/>
            <Entry Placeholder="Contraseña" x:Name="passEntry"
               HorizontalOptions="Center"
               WidthRequest="250"
               HeightRequest="75"
               IsPassword="True" 
               Text=""
                FontSize="18"/>
            <Button x:Name="ingresarButton"
                Text="Ingresar" 
                TextColor="White"
                WidthRequest="125"
                HeightRequest="45"
                BorderRadius="10"
                BackgroundColor="#439dbb"
                HorizontalOptions="Center"
                Margin="40"
                Clicked="ingresarButton_Clicked"/>
            <Label Text="¿No tienes cuenta?"
                   x:Name="registrar"
                   TextColor="#439dbb"
                   HorizontalOptions="Center"
                   />
            <Label Text="" 
                   TextColor="Red"
                   x:Name="errorLabel"
                   HorizontalOptions="Center"/>
        </StackLayout>

    </Grid>
    
    

</ContentPage>
