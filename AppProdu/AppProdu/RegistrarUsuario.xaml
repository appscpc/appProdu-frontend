<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProdu.RegistrarUsuario"
             Title="Registrar Usuario">

    <ScrollView>

        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="1" Grid.Column="0">
            <!-- Place new controls here -->
            <Entry Placeholder="Nombre" x:Name="nombreEntry"
                WidthRequest="250"
                HeightRequest="65"
                HorizontalOptions="Center"
                FontSize="18"/>
            <Entry Placeholder="Primer Apellido" x:Name="apellido1Entry"
                HorizontalOptions="Center"
                WidthRequest="250"
                HeightRequest="65"
                FontSize="18"/>
            <Entry Placeholder="Segundo Apellido" x:Name="apellido2Entry"
                HorizontalOptions="Center"
                WidthRequest="250"
                HeightRequest="65"
                FontSize="18"/>
            <Entry Placeholder="Correo" x:Name="correoEntry"
                WidthRequest="250"
                HeightRequest="65"
                HorizontalOptions="Center"
                FontSize="18"/>
            <Entry Placeholder="Contraseña" x:Name="passEntry"
                HorizontalOptions="Center"
                WidthRequest="250"
                HeightRequest="65"
                IsPassword="True" 
                FontSize="18"/>
            <Picker Title="Tipo Usuario" 
                    HorizontalOptions="Center"
                    x:Name="tipo"
                    WidthRequest="250"
                    HeightRequest="65"
                    FontSize="18"/>
            <Button x:Name="registrarButton"
                Text="Registrar" 
                TextColor="White"
                WidthRequest="125"
                HeightRequest="45"
                BorderRadius="10"
                BackgroundColor="#439dbb"
                HorizontalOptions="Center"
                Margin="40"
                Clicked="registrarButton_Clicked" />
            <Label Text="¿Ya tienes cuenta?"
                   x:Name="iniciar"
                   TextColor="#439dbb"
                   HorizontalOptions="Center"
                   />
            <Label Text="" 
                   TextColor="Red"
                   x:Name="errorLabel"
                   HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
        </ScrollView>
</ContentPage>